{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "$engine": [
        "engine/index.ts"
      ],
      "$loaders/*": [
        "loaders/*"
      ],
      "$structs/*": [
        "structs/*"
      ]
    },
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts"
  ]
}