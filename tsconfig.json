{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "$internal": [ "./internal/*" ],
      "$loaders": [ "./loaders/*" ],
      "$structs": [ "./structs/*" ]
    },
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "./src"
  ]
}